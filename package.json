{
    "author": "Faye",
    "description": "Utility library",
    "repository": {
        "type": "git",
        "url": "https://github.com/docimin/faye-utils.git"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "packageManager": "bun@1.3.0",
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "4.6.2",
        "@radix-ui/react-direction": "^1.1.1",
        "@radix-ui/react-toast": "^1.2.15",
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.2",
        "@typescript-eslint/eslint-plugin": "^8.46.1",
        "@typescript-eslint/parser": "^8.46.1",
        "autoprefixer": "^10.4.21",
        "class-variance-authority": "^0.7.1",
        "date-fns": "^4.1.0",
        "eslint": "^9.38.0",
        "eslint-config-prettier": "10.1.8",
        "eslint-plugin-prettier": "5.5.4",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.0",
        "lucide-react": "^0.546.0",
        "postcss": "^8.5.6",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "0.6.14",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "react-use": "^17.6.0",
        "tailwind-merge": "^3.3.1",
        "tailwindcss": "^4.1.14",
        "typescript": "^5.9.3"
    },
    "exports": {
        ".": {
            "import": {
                "default": "./dist/index.js",
                "types": "./dist/index.d.ts"
            },
            "require": {
                "default": "./dist/index.cjs",
                "types": "./dist/index.d.cts"
            }
        }
    },
    "files": [
        "dist"
    ],
    "keywords": [
        "react",
        "components",
        "typescript",
        "ui"
    ],
    "license": "MIT",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "name": "@docimin/faye-utils",
    "peerDependencies": {
        "react": "^19.2.0",
        "react-dom": "^19.2.0"
    },
    "scripts": {
        "build": "bun build --no-compress --format esm --format cjs --external react --entrypoint src/index.ts --outdir dist",
        "build:watch": "bun build --no-compress --format esm --format cjs --external react --watch --entrypoint src/index.ts --outdir dist --watch",
        "lint": "eslint . --ext .ts,.tsx",
        "type-check": "tsc --noEmit",
        "publish": "bun publish --access public"
    },
    "type": "module",
    "types": "./dist/index.d.ts",
    "version": "0.1.1"
}